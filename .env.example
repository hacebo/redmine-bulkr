# Appwrite Configuration (Public - Client Side)
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_project_id

# Appwrite Configuration (Server Side)
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id
APPWRITE_API_KEY=your_api_key_here

# Appwrite Database
APPWRITE_DATABASE_ID=your_database_id
APPWRITE_COLLECTION_ID=your_credentials_collection_id

# Application
# Use http://localhost:3000 for development
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Security Keys (auto-generated via pnpm generate-keys)
APP_COOKIE_SECRET=your-app-cookie-secret
CRYPTO_KEY_BASE64=your-encryption-key

# Handles login functionality enabled
ENABLE_PASSWORD_LOGIN=false

# Vercel KV (Upstash Redis) - For rate limiting magic links
# Get these from: https://vercel.com/dashboard/stores (create a KV database)
KV_REST_API_URL=your-kv-rest-api-url
KV_REST_API_TOKEN=your-kv-rest-api-token

# Redis Hash Secret - Used to hash email addresses for privacy in Redis keys
# Generate with: node scripts/generate-keys.js (now includes this key)
REDIS_HASH_SECRET=your-redis-hash-secret

# Sentry - Error tracking and performance monitoring
# Get from: https://sentry.io/settings/account/api/auth-tokens/ (create a token with "project:releases" and "project:write" scopes)
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Sentry - Console log levels to capture (comma-separated)
# Options: log, info, warn, error, debug
# Default: error (recommended for production to stay within free tier)
# For debugging: error,warn,info
SENTRY_LOG_LEVELS=error,warn,info
NEXT_PUBLIC_SENTRY_LOG_LEVELS=error,warn,info